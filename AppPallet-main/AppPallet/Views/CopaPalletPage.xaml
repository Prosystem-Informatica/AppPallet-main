<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPallet.Views.CopaPalletPage"
             Title=""
             NavigationPage.HasBackButton="False">

    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="#2196F3" Spacing="20">

            <!-- Título -->
            <Label Text="Relatorio"
                   FontSize="20"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"/>

            <!-- Cards em Grid 2x2 -->
            <Grid ColumnSpacing="15" RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card: Total Viagens -->
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="12"
                       HasShadow="True"
                       BackgroundColor="White"
                       Padding="15">
                    <StackLayout>
                        <Label 
                               Text="Total Viagens"
                               FontSize="14"
                               TextColor="Gray"/>
                        <Label x:Name="TotalViagensLabel" 
                               Text="-"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                    </StackLayout>
                </Frame>

                <!-- Card: Normais -->
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="12"
                       HasShadow="True"
                       BackgroundColor="White"
                       Padding="15">
                    <StackLayout>
                        <Label 
                               Text="Normais"
                               FontSize="14"
                               TextColor="Gray"/>
                        <Label x:Name="NormaisLabel" 
                               Text="-"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                    </StackLayout>
                </Frame>

                <!-- Card: Extras -->
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="12"
                       HasShadow="True"
                       BackgroundColor="White"
                       Padding="15">
                    <StackLayout>
                        <Label  
                               Text="Extras"
                               FontSize="14"
                               TextColor="Gray"/>
                        <Label x:Name="ExtrasLabel"
                               Text="-"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                    </StackLayout>
                </Frame>

                <!-- Card: Devoluções -->
                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="12"
                       HasShadow="True"
                       BackgroundColor="White"
                       Padding="15">
                    <StackLayout>
                        <Label  
                               Text="Devolucoes"
                               FontSize="14"
                               TextColor="Gray"/>
                        <Label 
                               x:Name="DevolucoesLabel"
                               Text="-"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="Black"/>
                    </StackLayout>
                </Frame>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
