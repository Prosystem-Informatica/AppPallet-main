<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPallet.Views.CustomPopupPage">
    <ContentPage.Content>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Imagem de Atenção -->
        <Image Source="attention_icon.png" HeightRequest="50" WidthRequest="50" HorizontalOptions="Center" />

        <!-- Mensagem -->
        <Label Text="Tema dados" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Margin="0,10,0,20"/>

        <!-- Botões -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
          <Button Text="Cancelar" BackgroundColor="Blue" TextColor="White" Margin="5" Clicked="OnCancelClicked"/>
          <Button Text="OK" BackgroundColor="Blue" TextColor="White" Margin="5" Clicked="OnOkClicked"/>
        </StackLayout>
      </StackLayout>
    </ContentPage.Content>
</ContentPage>